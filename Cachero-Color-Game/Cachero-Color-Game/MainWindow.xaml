<Window x:Name="mainWindow" x:Class="Cachero_Color_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cachero_Color_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid x:Name="mainGrid">
        <Rectangle x:Name="redHolRect" Fill="Red" Stroke="Black" Margin="28,181,741,223" Width="31" Height="31"/>
        <Rectangle x:Name="orangeHolRect" Fill="DarkOrange" Stroke="Black" Margin="28,216,741,188"/>
        <Rectangle x:Name="yellowHolRect" Fill="Yellow" Stroke="Black" Margin="28,251,741,153"/>
        <Rectangle x:Name="greenHolRect" Fill="Lime" Stroke="Black" Margin="28,286,741,118"/>
        <Rectangle x:Name="blueHolRect" Fill="Blue" Stroke="Black" Margin="28,321,741,83"/>
        <Rectangle x:Name="violetHolRect" Margin="28,356,741,48" Fill="Magenta" Stroke="Black"/>
        <TextBox x:Name="redWagerTbx" HorizontalAlignment="Left" Margin="77,187,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="orangeWagerTbx" HorizontalAlignment="Left" Margin="77,222,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="yellowWagerTbx" HorizontalAlignment="Left" Margin="77,257,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="greenWagerTbx" HorizontalAlignment="Left" Margin="77,292,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="blueWagerTbx" HorizontalAlignment="Left" Margin="77,327,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <TextBox x:Name="purpleWagerTbx" HorizontalAlignment="Left" Margin="77,362,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="70"/>
        <Label x:Name="wagerHeaderLbl" Content="Place Wager Here:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="119" Margin="28,142,0,0"/>

        <Button x:Name="confirmWagerBtn" Content="Place Wager" HorizontalAlignment="Left" Margin="28,404,0,0" VerticalAlignment="Top" Width="83" Click="confirmWagerBtn_Click"/>
        <Button x:Name="lginBtn" Content="Log In" HorizontalAlignment="Left" Margin="321,28,0,0" VerticalAlignment="Top" Width="60" Click="lginBtn_Click"/>
        <Label x:Name="uNameLbl" Content="Player Name: " HorizontalAlignment="Left" Margin="28,59,0,0" VerticalAlignment="Top"/>
        <Label x:Name="uBalanceLbl" Content="Player Balance: " HorizontalAlignment="Left" Margin="28,99,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtloginUsername" HorizontalAlignment="Left" Margin="35,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="txtloginPassword" HorizontalAlignment="Left" Margin="179,30,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblloginstatus" Content="Label" HorizontalAlignment="Left" Margin="417,39,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
